            android:layout_height="wrap_content"  
            android:saveEnabled="true"  
            android:text="中二"  
            />  
    </LinearLayout>
    
    <LinearLayout   
        android:id="@+id/four_user3_layout"  
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content"  
        android:orientation="horizontal"  
        >  
