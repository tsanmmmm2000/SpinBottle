            android:id="@+id/four_textuser3"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"  
            android:text="選手3："  
            />  
        <EditText   
            android:id="@+id/four_edituser3"  
            android:layout_width="fill_parent"  
            android:layout_height="wrap_content"  
            android:saveEnabled="true"  
            android:text="小三"  
            />  
    </LinearLayout>
    
    <LinearLayout   
        android:id="@+id/four_user4_layout"  
